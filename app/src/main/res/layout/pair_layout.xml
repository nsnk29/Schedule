<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:padding="8dp"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/pair">

        <TextView
                android:text="11:30\n13:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pair_time" android:layout_margin="4dp"
                android:padding="4dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Конструирование алгоритмов и структур данных"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subject_name" app:layout_constraintStart_toEndOf="@+id/pair_time"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"
                android:layout_marginTop="8dp" android:singleLine="false" android:layout_margin="4dp"
                android:textStyle="bold"/>
        <TextView
                android:text="Практика"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type_of_subject" app:layout_constraintStart_toEndOf="@+id/pair_time"
                app:layout_constraintTop_toBottomOf="@+id/subject_name" android:layout_marginStart="4dp"
                android:layout_marginTop="4dp" android:padding="2dp"/>
        <TextView
                android:text="Генералов П.Д"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lector_name" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/type_of_subject"
                app:layout_constraintStart_toEndOf="@+id/pair_time" android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        <TextView
                android:text="А301б"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>