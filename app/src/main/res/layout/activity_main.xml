<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topMenu"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ToggleButton
                android:id="@+id/toggle"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:background="@color/empty_pairs"
                android:gravity="center"
                android:maxLines="1"
                android:padding="4dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_color_primary"
                android:textOff="@string/current_week"
                android:textOn="@string/next_week"

                app:layout_constraintBottom_toBottomOf="@+id/settingsButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/settingsButton" />

        <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/settings"
                android:onClick="openSettings"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_settings" />

        <TextView
                android:id="@+id/weekDayText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/monday"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_color_primary"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/settingsButton"
                app:layout_constraintEnd_toStartOf="@+id/toggle"
                app:layout_constraintStart_toEndOf="@+id/settingsButton"
                app:layout_constraintTop_toTopOf="@+id/settingsButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:orientation="horizontal"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:clipToPadding="false"
            android:padding="2dp"
            app:layout_constraintBottom_toTopOf="@+id/recycleViewBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topMenu"
            tools:listitem="@layout/card_layout_two_lines" />

    <View
            android:id="@+id/bottomShadow"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:background="@drawable/shadow"
            app:layout_constraintBottom_toTopOf="@+id/recycleViewBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <View
            android:id="@+id/topShadow"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@drawable/shadow"
            app:layout_constraintBottom_toTopOf="@+id/recycleViewMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topMenu" />


</androidx.constraintlayout.widget.ConstraintLayout>